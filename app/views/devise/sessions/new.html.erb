<div class="form-flexbox-lhs">
  <div class="white-form-rounded">
    <h2 class="two-color-headline">sign<span class="nest-purple">in</span></h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs" class="hide-mb3">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "continue" %>
      </div>
    <% end %>

    <p>Don't have an account yet? Sign up <%= link_to "here", new_user_registration_path %></p>


  </div>
</div>

<div class="tree-bg-signup">
</div>
